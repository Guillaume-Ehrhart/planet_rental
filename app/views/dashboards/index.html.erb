<div class="container mt-3">
  <ul class="nav nav-tabs bg-dark text-white d-flex justify-content-center mb-1">
    <li class="nav-item">
      <a class="nav-link active text-white" data-bs-toggle="tab" href="#pending">Pending Bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-white" data-bs-toggle="tab" href="#current">Current Bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-white" data-bs-toggle="tab" href="#planets">Your Planets</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="pending">
      <% @bookings.each do |booking| %>
        <% if booking.status == "pending" && booking.planet.present? %>
          <%= render "shared/booking-card", booking: booking %>
        <% end %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="current">
      <% @bookings.each do |booking| %>
        <% if booking.date_out > Date.today %>
          <%= render "shared/user-booking-card", booking: booking %>
        <% end %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="planets">
      <% @planets.each do |planet| %>
        <%= render "shared/planet-card", planet: planet %>
      <% end %>
    </div>
  </div>
</div>
