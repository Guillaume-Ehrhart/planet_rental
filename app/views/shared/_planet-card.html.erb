<div class="list-card">
  <div class="offer-card-info flex-column align-items-center ">
    <div>
      <p><strong>Planet ID:</strong> <%= planet.id %></p>
      <p>Planet: <%= planet.name %></p>
      <div class="btn my-3 me-2"><%= link_to "Edit", edit_planet_path(planet) %></div>
      <div class="btn my-3"><%= link_to "Delete", planet_path(planet), method: :delete, data: { confirm: "Are you sure?" } %></div>
      <div class="btn my-3"><%= link_to "Book planet", new_planet_booking_path(planet) %></div>
    </div>
  </div>
</div>
