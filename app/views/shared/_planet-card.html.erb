<!-- app/views/shared/_planet-card.html.erb -->
<div class="list-card">
    <div class="card h-100"> <!-- ensures the card takes full height -->
      <div class="card-body d-flex flex-column"> <!-- flex-column for vertical alignment -->
      <div class="top-section d-flex justify-content-between align-items-center">
        <p><strong>Planet ID:</strong> <%= planet.id %></p>
          <div class="availability">
            <% if planet.bookings.where(status: ['pending', 'accepted']).exists? %>
                <p>Planet has a pending or accepted status.</p>
            <% else %>
                <p>Planet is available.</p>
            <% end %>
          </div>
        </div>
      <div class="centered-content">
        <% if planet.image.present? %>
          <img src="<%= cl_image_path planet.image.key %>" alt="Planet Image" style="width: 187px; height: 108px;">
        <% end %>
        <h4 class="card-title"><%= planet.name.upcase %></h4>
        <div class="mt-auto"> <!-- mt-auto for automatic margin top to push buttons to the bottom -->
          <div class="btn text-bg-dark btn-spacing btn-edit"><%= link_to "Edit", edit_planet_path(planet) %></div>
          <div class="btn text-bg-dark btn-spacing btn-delete"><%= link_to "Delete", planet_path(planet), method: :delete, data: { confirm: "Are you sure?" } %></div>
          <div class="btn text-bg-dark btn-view"><%= link_to "View", planet_path(planet) %></div>
        </div>
      </div>
    </div>
  </div>
</div>
