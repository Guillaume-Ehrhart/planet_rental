
<div class="page-container">
  <div class="planet-name"><%= @planet.name %></div>
  <div class="planet-details">
    <ul>
      <li class="listed-details">
        <h2>Galaxy:</h2>
        <span><%= @planet.galaxy %></span>
      </li>
      <li class="listed-details">
        <h2>System:</h2>
        <span><%= @planet.system %></span>
      </li>
      <li class="listed-details">
        <h2>Description:</h2>
        <span><%= @planet.description %></span>
      </li>
      <li class="listed-details">
        <h2>Type:</h2>
        <span><%= @planet.body_type %></span>
      </li>
      <li class="listed-details">
        <h2>Price per night: â‚¬</h2>
        <span><%= @planet.price_per_night %></span>
      </li>
    </ul>
    <%= link_to "Delete", planet_path(@planet), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
    <%= link_to "Edit", edit_planet_path(@planet) %>
  </div>



<div class="planet-image">
  <% if @planet.image.present? %>
    <img src="<%= cl_image_path @planet.image.key %>" alt="Planet Image" style="width: 700px;">
  <% else %>
    <img src="https://images.unsplash.com/photo-1614314107768-6018061b5b72?q=80&w=2874&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" style="width: 700px;" alt="jupiter">
  <% end %>
</div>

<div class="booking-form-container sticky-top">
  <div class="d-flex flex-column align-items-center">
    <p class="booking-header">Submit your booking request</p>
    <div id="reservation-form">
      <%= simple_form_for [@planet, @booking], url: planet_bookings_path(@planet) do |f| %>
        <div class="d-flex justify-content-between align-items-center">

          <div class="check-in-check-out">
            <div class="input-group">
              <%= f.input :date_in,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } },
                      wrapper_html: { class: 'date-input-wrapper' } %>
              </div>

              <div class="input-group">
              <%= f.input :date_out,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } },
                      wrapper_html: { class: 'date-input-wrapper' } %>
              </div>
            </div>
          </div>

          <div class="comment">
          <%= f.input :comment %>
          </div>

          <div class="d-flex justify-content-start">
            <%= f.submit "Reserve", class: "booking-form-button"%>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
